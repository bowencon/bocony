<script src="js/jquery-1.11.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
$(function(){
   /*--进度、数字百分比计算☆--*/  
  (function Busines_Proging(){
      var lenB = $(".ping").length; 
      var arrdata = new Array();
      
      function progem(n){
        var progem = $("#p_m"+n),
            data = progem.text();    
            arrdata.push(data);  console.log(JSON.stringify(arrdata));
      }
      var i =1;
      for(;i <= lenB;){ 
          progem(i);
          i++;
      } 

      var maxdata = '';//最大值
          maxdata = arrdata[0];
      for(var j = 1; j < arrdata.length; j++){ 
          if( maxdata < arrdata[j]){
              maxdata = arrdata[j];  
          } 
      } 

      function proging(p){  
    	  var data = $(".p"+p).parent().next().find("em").text();
    	  var _w = Math.round([data/maxdata]*100);
    	  //进度条animation
    	  $(".p"+p).animate({"width": _w +"%"},500,function(){ 
    		   $(this).css({"width": _w +"%"}).attr("title",_w +"%");
    	  });  
      }
      for(var k=1; k<=lenB; k++){
          proging(k); console.log(k);
      }

  })();
   
/*-------jquery end-------*/
});		
</script>
